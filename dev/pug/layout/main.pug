                            button(type="button").catalog__count-btn.js-increase
                        button(type="submit").catalog__submit В корзину

                li.catalog__item
                    .catalog__info(data-price="3190 ₽")
                        .catalog__visual(data-type="triple")
                            ul
                                li.active
                                    img(src="static/images/content/jour-1.jpg" width="" height="" alt="")
                                li
                                    img(src="static/images/content/jour-2.jpg" width="" height="" alt="")
                                li
                                    img(src="static/images/content/jour-3.jpg" width="" height="" alt="")
                        h3.catalog__name Архив журналов
                        p.catalog__preview Архив wine stage #2, 3, 4 
                        .catalog__details
                            p.catalog__details-description1 Архив wine stage #2, 3, 4 
                            p.catalog__details-description2 
                    span.catalog__price 3190 ₽
                    .catalog__checkout
                        .catalog__count
